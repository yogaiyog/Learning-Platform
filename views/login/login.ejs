<%- include('partials/header-login') %>


<div class="row vh-100 noscroll">
  <div class="col-2 col-lg-7 bg-light  home-img">
    <div class="container">
      <h1 class="etna"><span class="textwhite">Due</span><span class="textpurple">Tomorrow</span></h1>
    </div>
  </div>
  <div class="col-10 col-lg-5 d-flex justify-content-center align-items-center bg-dark">
    <div class="col-12 col-sm-10">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <h1 class="text-center mb-5 etna" ><span class="textwhite">Log-</span><span class="textpurple" style="letter-spacing: 2px;">In</span></h1>
                <form action="/login" method="POST">
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="username" id="email" required>
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" required>
                  </div>
                  <div class="flex"><button type="submit" class="btn btn-outline-dark mt-2 ml-3">Log In</button>
                    </div>
                    
                  
                  
                 
                  
                </form>

                <div class="col mt-4">
                  <div class="card">     
                      <a class="btn btn-outline-danger btn-block" href="/auth/google" role="button">
                        <i class="fab fa-google"></i>
                        Sign In with Google
                      </a>
                  </div>
                </div>
                
                <div class="text-center mt-3">
                  <small><em class="font-italic">Don't have account?</em></small>
                  <a href="/register" class="font-weight-bold text-secondary">Register</a>
                </div>
                

              </div>
            </div>
            <div class="demo-container">
              <p class="">Demo Account:</p>
              <div class="demo">
                <button class="btn btn-primary" onclick="instructor()">Instructor</button>
                <button class="btn btn-outline-dark" onclick="student()">Student</button>
              </div>
              <em class="blockquote-footer mt-2">Sign Up with local or google for best experience</em>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const email = document.querySelector("#email")
  const pass = document.querySelector("#password")
  function instructor() {
    email.value = "yoga@needjob.com"
    pass.value = "duetomorrow"
  }
  function student() {
    email.value = "student@duetomorrow"
    pass.value = "123"
  }
  

</script>

<%- include('partials/footer-login') %>
