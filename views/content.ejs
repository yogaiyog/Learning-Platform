<!DOCTYPE html>
<html lang="en">
<%- include("partials/header.ejs") %>
<body>

<% if (locals.course) {  %>
<div class="timer-container"  >
    <div class="left-timer">
            <a href="/"><img src="/image/logoc.png" alt="Logo" /></a>
            <a class="back" href=""><i class="fa-solid fa-angles-left" style="color: #ffffff;"></i></a>
    </div>
    <div class="right-timer">
        <small class="timer" id="timer">00:30</small>
    </div>
</div>

<div class="content-page" data-course-id="<%= course.id %>" data-course-type = "<%= lessonType %>">
    <div class="left-content-page">
        <div class="course-title" style="background-image: linear-gradient(
            rgba(0,212,255,0) 11%, rgba(0, 0, 0, 0.747) 71%, rgb(0, 0, 0) 100%
            ),url(<%= course.image_source %>); ">
            <h1><%= lessons[lessonIndex].lesson_title %></h1>
            <!-- this for % bar -->
            <div class="progress-container main" data-progress="<%= percentage %>">
                <div class="progress-bar"></div>
                <div class="progress-text"></div>
              </div>
        </div>
        <div class="lessons">
            <h3><%= lessons.length %> lessons</h3>
            <% lessons.forEach((lesson, index) => { %>
                <% if (index == lessonIndex) { %>
                    <a class="lesson-bar selected" href="/training/content?id=<%= course.id %>&lessonIndex=<%= index %>&type=<%= lessonType %>">
                        <p><%= lesson.lesson_title %></p>
                        <input type="checkbox" class="lesson-checkbox" data-lesson-id="<%= lesson.id %>" <% if (progress[index] && progress[index].complete) { %>checked<% } %>>
                    </a>
                <% } else { %>
                    <a class="lesson-bar" href="/training/content?id=<%= course.id %>&lessonIndex=<%= index %>&type=<%= lessonType %>">
                        <p><%= lesson.lesson_title %></p>
                        <input type="checkbox" class="lesson-checkbox" data-lesson-id="<%= lesson.id %>" <% if (progress[index] && progress[index].complete) { %>checked<% } %>>
                    </a>
                <% } %>
            <% }) %>
        </div>
    </div>
    <div class="right-content-page">
        <div class="video" >
            <% if (lessons[lessonIndex].youtube_url) { %>
                <div id="player"></div>
            <% } else { %>
                <video width="100%" controls>
                    <source src="mov_bbb.mp4" type="video/mp4">
                    <source src="mov_bbb.ogg" type="video/ogg">
                    Your browser does not support HTML video.
                </video>
            <% } %>
        </div>
        <div class="detail-attachment">
            <em>lesson attachment</em>
            <a href="" class="button">Next lesson</a>
        <% } %>
        </div>
    </div>
</div>
<script src="/js/req.js"></script>
<script>
    var tag = document.createElement('script');
    var lessonDuration = 15; // in minutes
    var count = lessonDuration * 60; // convert minutes to seconds

    tag.src = "https://www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

    var player;
    function onYouTubeIframeAPIReady() {
        player = new YT.Player('player', {
            height: '100%', // Set height to auto
            width: '100%', // Set width to 100% of the parent element
            videoId: '<%= lessons[lessonIndex].youtube_url %>', 
            playerVars: {
                'playsinline': 1
            },
            events: {
                'onReady': onPlayerReady,
                'onStateChange': onPlayerStateChange
            }
        });
    }

    // Format the time as MM:SS
    function formatTime(seconds) {
        var minutes = Math.floor(seconds / 60);
        var remainingSeconds = seconds % 60;
        return minutes.toString().padStart(2, '0') + ':' + remainingSeconds.toString().padStart(2, '0');
    }

    // Update timer display every second
    setInterval(function() {
        document.getElementById("timer").innerHTML = formatTime(count); // Display the time in MM:SS format
    }, 1000);

    function onPlayerReady(event) {
        event.target.playVideo();
    }

    var countInterval;
    function onPlayerStateChange(event) {
        if (event.data == YT.PlayerState.PLAYING) {
            if (!countInterval) { 
                countInterval = setInterval(() => {
                    count -= 1;
                    if (count <= 0) {
                        clearInterval(countInterval);
                        countInterval = null;
                        player.stopVideo(); 
                    }
                }, 1000);
            }
        } else if (event.data == YT.PlayerState.PAUSED || event.data == YT.PlayerState.ENDED) {
            clearInterval(countInterval);
            countInterval = null; 
        }
    }

    function stopVideo() {
        player.stopVideo();
    }
</script>



<script src="https://kit.fontawesome.com/462e5cdfa2.js" crossorigin="anonymous"></script>
<script src="/js/index.js"></script> 

</body>
</html>
