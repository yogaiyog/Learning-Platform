<% if (locals.addCourses) { %>
<div class="startLearning center">
    <div class="learn-cards">
        <% addCourses.forEach((course, index)=>{ %>
            <% if (index <= 2)  { %>
            <a href="/training?id=<%= course.id %>" class="learn-card">
                <img src="<%=course.image_source%>"/>
                <div class="content-card">
                    <div class="judul-card">
                        <h2><%= course.judul %></h2>
                    </div>
                  
                  <p>
                    <%= course.detail.substring(0,150) %> . . .
                  </p>
                  <div class="card-foot">
                    <h6>Created by: <%= course.pembuat %></h6>
                    <small><em><%= course.total_lesson %> lessons </em></small>
                  </div>
                  <div class="progress-container" data-progress="<%= studentProgressAdd[index].complete %>">
                    <div class="progress-bar"></div>
                    <div class="progress-text"></div>
                  </div>
                </div>
            </a>
       <% }})%>
      
    <% } %>
    </div>
  </div>